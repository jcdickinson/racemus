{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/racemus.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [
                {
                    "name": "RACEMUS_LOG",
                    "value": "racemus=trace"
                }
            ],
            "externalConsole": true,
            "preLaunchTask": {
                "label": "cargo build",
                "type": "cargo",
                "subcommand": "build",
                "problemMatcher": [
                    "$rustc"
                ]
            }
        }
    ]
}